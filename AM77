                        <li><a href="#" class="text-white">رویه بازگرداندن کالا</a></li>
                        <li><a href="#" class="text-white">شرایط و ضوابط</a></li>
                        <li><a href="#" class="text-white">حریم خصوصی</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>با ما در ارتباط باشید</h5>
                    <div class="d-flex mt-3">
                        <a href="#" class="text-white me-3"><i class="fab fa-instagram fa-2x"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-telegram fa-2x"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-whatsapp fa-2x"></i></a>
                    </div>
                    <div class="mt-3">
                        <p>پشتیبانی: ۰۲۱-۷۷۷۷۷۷۷۷</p>
                        <p>ایمیل: support@am77.ir</p>
                    </div>
                </div>
            </div>
            <hr class="mt-4 bg-light">
            <p class="text-center mb-0">© ۱۴۰۲ کلیه حقوق برای فروشگاه پکیج عددی محفوظ است. | مدیریت: AM77</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // مدیریت محصولات
        let products = [
            {
                id: 1,
                name: "پکیج آموزش ریاضی",
                price: 250000,
                description: "آموزش کامل ریاضیات با جدیدترین متدهای آموزشی."
            },
            {
                id: 2,
                name: "پکیج برنامه نویسی",
                price: 450000,
                description: "آموزش برنامه نویسی از مقدماتی تا پیشرفته."
            },
            {
                id: 3,
                name: "پکیج آموزش مدیریت",
                price: 600000,
                description: "آموزش اصول مدیریت و رهبری برای کسب و کارها."
            }
        ];

        // مدیریت درخواست‌ها
        let requests = [
            { id: 1, name: "محمد رضایی", phone: "09123456789", count: 2, status: "در انتظار" },
            { id: 2, name: "فاطمه محمدی", phone: "09129876543", count: 1, status: "تایید شده" },
            { id: 3, name: "علی حسینی", phone: "09351234567", count: 3, status: "رد شده" }
        ];

        // وضعیت ورود مدیر
        let isAdminLoggedIn = false;
        let requestsDisplayed = 0;

        // بررسی وضعیت اتصال به اینترنت
        function checkInternetConnection() {
            const statusElement = document.getElementById('connection-status');
            
            if (navigator.onLine) {
                statusElement.className = 'connection-status online';
                statusElement.innerHTML = '<i class="fas fa-wifi me-1"></i> متصل به اینترنت';
            } else {
                statusElement.className = 'connection-status offline';
                statusElement.innerHTML = '<i class="fas fa-wifi-slash me-1"></i> عدم اتصال به اینترنت';
            }
        }

        // نمایش محصولات
        function renderProducts() {
            const productsContainer = document.getElementById('products-container');
            productsContainer.innerHTML = '';
            
            products.forEach(product => {
                const productCard = `
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">${product.name}</h5>
                                <p class="card-text">${product.description}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="fw-bold fs-5 text-primary">${product.price.toLocaleString()} تومان</span>
                                    <a href="#payment" class="btn btn-primary">خرید محصول</a>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                productsContainer.innerHTML += productCard;
            });
            
            // به روز رسانی تعداد محصولات
            document.getElementById('products-count').textContent = products.length;
            
            // نمایش محصولات در جدول مدیریت
            renderProductsTable();
        }
        
        // نمایش محصولات در جدول مدیریت
        function renderProductsTable() {
            const productsTableBody = document.getElementById('products-table-body');
            productsTableBody.innerHTML = '';
            
            products.forEach(product => {
                const productRow = `
                    <tr>
                        <td>${product.name}</td>
                        <td>${product.price.toLocaleString()} تومان</td>
                        <td>${product.description}</td>
                        <td>
                            <button class="btn btn-sm btn-primary me-1" onclick="editProduct(${product.id})">ویرایش</button>
                            <button class="btn btn-sm btn-danger" onclick="deleteProduct(${product.id})">حذف</button>
                        </td>
                    </tr>
                `;
                
                productsTableBody.innerHTML += productRow;
            });
        }
        
        // نمایش درخواست‌ها
        function renderRequests() {
            const requestsTableBody = document.getElementById('requests-table-body');
            requestsTableBody.innerHTML = '';
            
            requests.forEach(request => {
                let statusClass = '';
                if (request.status === "تایید شده") statusClass = 'bg-success';
                else if (request.status === "رد شده") statusClass = 'bg-danger';
                else statusClass = 'bg-warning';
                
                const requestRow = `
                    <tr>
                        <td>${request.id}</td>
                        <td>${request.name}</td>
                        <td>${request.phone}</td>
                        <td>${request.count}</td>
                        <td><span class="badge ${statusClass}">${request.status}</span></td>
                        <td>
                            <button class="btn btn-sm btn-success me-1" onclick="approveRequest(${request.id})">تایید</button>
                            <button class="btn btn-sm btn-danger me-1" onclick="rejectRequest(${request.id})">رد</button>
                            <button class="btn btn-sm btn-primary" onclick="editRequest(${request.id})">ویرایش</button>
                        </td>
                    </tr>
                `;
                
                requestsTableBody.innerHTML += requestRow;
            });
            
            // به روز رسانی تعداد درخواست‌ها
            document.getElementById('requests-count').textContent = requests.length;
            document.getElementById('requests-displayed').value = requestsDisplayed;
        }
        
        // به روزرسانی تعداد درخواست‌های نمایش داده شده
        function updateRequestsCount() {
            requestsDisplayed = parseInt(document.getElementById('requests-displayed').value);
            alert(`تعداد درخواست‌های نمایش داده شده به ${requestsDisplayed} عدد بروزرسانی شد.`);
        }
        
        // تایید درخواست
        function approveRequest(requestId) {
            if (!isAdminLoggedIn) {
                alert('لطفاً ابتدا به پنل مدیریت وارد شوید.');
                showLoginForm();
                return;
            }
            
            const requestIndex = requests.findIndex(r => r.id === requestId);
            if (requestIndex !== -1) {
                requests[requestIndex].status = "تایید شده";
                renderRequests();
                alert('درخواست با موفقیت تایید شد.');
            }
        }
        
        // رد درخواست
        function rejectRequest(requestId) {
            if (!isAdminLoggedIn) {
                alert('لطفاً ابتدا به پنل مدیریت وارد شوید.');
                showLoginForm();
                return;
            }
            
            const requestIndex = requests.findIndex(r => r.id === requestId);
            if (requestIndex !== -1) {
                requests[requestIndex].status = "رد شده";
                renderRequests();
                alert('درخواست با موفقیت رد شد.');
            }
        }
        
        // ویرایش درخواست
        function editRequest(requestId) {
            if (!isAdminLoggedIn) {
                alert('لطفاً ابتدا به پنل مدیریت وارد شوید.');
                showLoginForm();
                return;
            }
            
            const request = requests.find(r => r.id === requestId);
            if (request) {
                const newCount = prompt('تعداد جدید را وارد کنید:', request.count);
                if (newCount !== null && newCount !== '') {
                    request.count = parseInt(newCount);
                    renderRequests();
                    alert('تعداد درخواست با موفقیت ویرایش شد.');
                }
            }
        }
        
        // ویرایش محصول
        function editProduct(productId) {
            if (!isAdminLoggedIn) {
                alert('لطفاً ابتدا به پنل مدیریت وارد شوید.');
                showLoginForm();
                return;
            }
            
            const product = products.find(p => p.id === productId);
            if (product) {
                const newPrice = prompt('قیمت جدید را وارد کنید:', product.price);
                if (newPrice !== null && newPrice !== '') {
                    product.price = parseInt(newPrice);
                    renderProducts();
                    alert('قیمت محصول با موفقیت ویرایش شد.');
                }
            }
        }
        
        // حذف محصول
        function deleteProduct(productId) {
            if (!isAdminLoggedIn) {
                alert('لطفاً ابتدا به پنل مدیریت وارد شوید.');
                showLoginForm();
                return;
            }
            
            if (confirm('آیا از حذف این محصول اطمینان دارید؟')) {
                products = products.filter(p => p.id !== productId);
                renderProducts();
                alert('محصول با موفقیت حذف شد.');
            }
        }
        
        // افزودن محصول جدید
        document.getElementById('add-product-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!isAdminLoggedIn) {
                alert('لطفاً ابتدا به پنل مدیریت وارد شوید.');
                showLoginForm();
                return;
            }
            
            const newProduct = {
                id: products.length > 0 ? Math.max(...products.map(p => p.id)) + 1 : 1,
                name: document.getElementById('product-name').value,
                price: parseInt(document.getElementById('product-price').value),
                description: document.getElementById('product-description').value
            };
            
            products.push(newProduct);
            renderProducts();
            
            // ریست فرم
            document.getElementById('add-product-form').reset();
            
            alert('محصول جدید با موفقیت اضافه شد.');
        });
        
        // مدیریت فرم ورود
        document.getElementById('login-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const username = document.getElementById('admin-username').value;
            const password = document.getElementById('admin-password').value;
            
            // بررسی اعتبار مدیر
            if (username === 'am77' && password === 'am77_23_6') {
                isAdminLoggedIn = true;
                document.getElementById('admin-panel').style.display = 'block';
                document.getElementById('login-section').style.display = 'none';
                document.getElementById('admin-login-btn').classList.add('admin-only');
                document.querySelector('.user-profile').classList.remove('admin-only');
                
                // رندر درخواست‌ها و محصولات
                renderRequests();
                renderProducts();
                
                alert('ورود موفقیت‌آمیز بود. به پنل مدیریت خوش آمدید.');
            } else {
                alert('نام کاربری یا رمز عبور اشتباه است.');
            }
        });
        
        // مدیریت خروج
        document.getElementById('admin-logout-btn').addEventListener('click', function() {
            isAdminLoggedIn = false;
            document.getElementById('admin-panel').style.display = 'none';
            document.getElementById('login-section').style.display = 'flex';
            document.getElementById('admin-login-btn').classList.remove('admin-only');
            document.querySelector('.user-profile').classList.add('admin-only');
            
            alert('از پنل مدیریت خارج شدید.');
        });
        
        // نمایش فرم ورود
        function showLoginForm() {
            document.getElementById('login-section').style.display = 'flex';
            document.getElementById('admin-panel').style.display = 'none';
        }
        
        // انتخاب روش پرداخت
        document.querySelectorAll('.payment-method').forEach(method => {
            method.addEventListener('click', function() {
                document.querySelectorAll('.payment-method').forEach(m => {
                    m.classList.remove('active');
                });
                this.classList.add('active');
            });
        });
        
        // نمایش/مخفی کردن اطلاعات حساب
        function toggleAccountInfo() {
            const info = document.getElementById('account-info');
            if (info.style.display === 'none') {
                info.style.display = 'block';
            } else {
                info.style.display = 'none';
            }
        }
        
        // پرداخت
        document.getElementById('payment-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // ایجاد یک درخواست جدید
            const newRequest = {
                id: requests.length > 0 ? Math.max(...requests.map(r => r.id)) + 1 : 1,
                name: "کاربر جدید",
                phone: "شماره تماس",
                count: 1,
                status: "در انتظار"
            };
            
            requests.push(newRequest);
            
            if (isAdminLoggedIn) {
                renderRequests();
            }
            
            alert('پرداخت با موفقیت انجام شد. درخواست شما ثبت گردید.');
            this.reset();
        });
        
        // مقداردهی اولیه
        document.addEventListener('DOMContentLoaded', function() {
            // بررسی وضعیت اتصال به اینترنت
            checkInternetConnection();
            
            // افزودن event listener برای تغییرات وضعیت اتصال
            window.addEventListener('online', checkInternetConnection);
            window.addEventListener('offline', checkInternetConnection);
            
            // رندر اولیه محصولات
            renderProducts();
            
            // رندر اولیه درخواست‌ها
            renderRequests();
            
            // پنهان کردن دکمه‌های مدیریت در ابتدا
            document.querySelectorAll('.admin-only').forEach(el => {
                el.style.display = 'none';
            });
            
            // پنهان کردن اطلاعات حساب در ابتدا
            document.getElementById('account-info').style.display = 'none';
        });
    </script>
</body>
</html>
